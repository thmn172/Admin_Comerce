@model SV20T1020460.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID"/>
            <div class="form-group">
                <label for="email">Tên người giao hàng:</label>
                <input type="text" class="form-control" name="ShipperName" value="@Model.ShipperName" autofocus>
                @* @Html.TextBoxFor(m => m.ShipperName , new {@class="form-control", @autofocus = "autofocus"}) *@
            @Html.ValidationMessage(nameof(Model.ShipperName), new {@class="text-danger"})
            </div>
            <div class="form-group">
                <label for="email">Số điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new { @class = "text-danger" })
            </div>
                @Html.ValidationMessage("Error", new { @class = "text-danger" })
            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>