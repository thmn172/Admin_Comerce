@model SV20T1020460.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="SupplierId" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" class="form-control" name="SupplierName" value="@Model.SupplierName" autofocus>
                @Html.ValidationMessage(nameof(Model.SupplierName), new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">

                @Html.ValidationMessage(nameof(Model.ContactName), new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new{@class="text-danger"})
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control" name="Email" value="@Model.Email">

                @Html.ValidationMessage(nameof(Model.Email), new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
            </div>
            <div class="form-group">
                <label>Tỉnh thành:</label>
                @* <select class="form-control" name="Provice">
                    <option>-- Chọn tỉnh thành --</option>
                    @foreach(var item in SV20T1020460.BusinessLayers.CommomDataService.ListOfProvinces())
                    {
                        if(item.ProvinceName == Model.Provice)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName" >@item.ProvinceName</option>
                        }
                    }
                </select> *@

                    @Html.DropDownListFor(m => m.Provice, SelectListHelper.Province(), new { @class = "form-control" })
                @Html.ValidationMessage(nameof(Model.Provice), new { @class = "text-danger" })
            </div>
            @Html.ValidationMessage("Error", new{@class="text-danger"})
            <div class="form-group text-right">
               <button type="submit" class="btn btn-success">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>