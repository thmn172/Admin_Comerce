@model SV20T1020460.DomainModels.Customer
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
            <div class="form-group">
                <label for="email">Tên khách hàng:</label>
                <input type="text" class="form-control" name="CustomerName" autofocus value="@Model.CustomerName">
                @* @Html.TextBoxFor(m => m.CustomerName, new{ @class="form-control", @autofocus="autofocus" }) *@
                @Html.ValidationMessage(nameof(Model.CustomerName), new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="email">Tên giao dịch:</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                @* @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control"}) *@
                @Html.ValidationMessage(nameof(Model.ContactName), new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="email">Số điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new{@class="text-danger"})
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" class="form-control" name="Email" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email), new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="email">Địa chỉ:</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
            </div>
            <div class="form-group">
                <div class="checkbox" style="display: flex">
                    <div style="margin-right: 50px">
                        <input type="radio" id="Islocked" name="Islocked" value="true" @(Model.Islocked ? "checked" : "") />
                        <label for="Islocked" style="padding-left: 0">Tài khoản bị khóa</label>
                    </div>
                    <div>
                        <input type="radio" id="unlocked" name="Islocked" value="false" @(Model.Islocked ? "" : "checked") />
                        <label for="unlocked" style="padding-left: 0">Tài khoản đang hoạt động</label>
                    </div>

                </div>

            </div>
            <div class="form-group">
                

            </div>

            <div class="form-group">
                <label for="email">Tỉnh thành:</label>
                @* <select class="form-control" name="Province">
                    <option value="">-- Chọn tỉnh thành --</option>
                    @foreach (var item in SV20T1020460.BusinessLayers.CommomDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>

                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>

                        }
                    }
                </select> *@
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Province(), new { @class = "form-control"})
                @Html.ValidationMessage(nameof(Model.Province), new { @class = "text-danger" })
            </div>
            @Html.ValidationMessage("Error", new{@class="text-danger"})
            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>