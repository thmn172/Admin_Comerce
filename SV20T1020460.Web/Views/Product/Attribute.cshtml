@model SV20T1020460.DomainModels.ProductAttribute
@{
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SaveAttribute" method="post">
        <div class="form-group">
                <input type="hidden" name="AttributeID" value="@Model.AttributeID" />
                <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <label class="control-label col-sm-2">Tên thuộc tính:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" autofocus name="AttributeName" value="@Model.AttributeName">
                    @Html.ValidationMessage(nameof(Model.AttributeName), new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Giá trị thuộc tính:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" autofocus name="AttributeValue" value="@Model.AttributeValue">
                    @Html.ValidationMessage(nameof(Model.AttributeValue), new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" rows="3" name="DisplayOrder" value="@Model.DisplayOrder"/>
                    @Html.ValidationMessage(nameof(Model.DisplayOrder), new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu dữ liệu
                </button>
                <a class="btn btn-warning" href="~/Product/Edit/@Model.ProductID">
                    Quay lại
                </a>
            </div>
        </div>
    </form>
    </div>
</div>


