@model SV20T1020460.DomainModels.ProductPhoto
@{

}
@* Form (bổ sung hoặc cập nhật ảnh),cần các sthong tin
- chọn file ảnh(input tpy=file)
- hiển thị file ảnh(img)
- mô tả ảnh(input type=text)
- thứ tự hiển thị
- có hiển thị ảnh hay không(checkbox)
 *@
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="~/Product/SavePhoto" enctype="multipart/form-data">
        <div class="form-group">
                <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <input type="hidden" name="PhotoID" value="@Model.PhotoID"/>
            
            <label class="control-label col-sm-2">Mô tả:</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="3" name="Description">@Model.Description</textarea>
                @Html.ValidationMessage(nameof(Model.Description), new{@class="text-danger"})
            </div>
        </div>
             <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox" style="display: flex">
                        <div style="margin-right: 50px">
                            <input type="radio" id="IsSelling" name="IsHidden" value="true" @(Model.IsHidden ? "checked" : "") />
                            <strong for="IsSelling" style="padding-left: 0">Hiển thị ảnh</strong>
                        </div>
                        <div>
                            <input type="radio" id="NoneSelling" name="IsHidden" value="false" @(Model.IsHidden ? "" : "checked") />
                            <strong for="NoneSelling" style="padding-left: 0">Không hiển thị ảnh</strong>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" rows="3" name="DisplayOrder" value="@Model.DisplayOrder"/>
                    @Html.ValidationMessage(nameof(Model.DisplayOrder), new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
                   @*  @Html.ValidationMessage(nameof(Model.Photo), new { @class = "text-danger" }) *@
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Product/Edit/@Model.ProductID">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


