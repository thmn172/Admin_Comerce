@model SV20T1020460.Web.Models.Person
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Test/Save" method="post">
            <div class="form-group">
                <label for="email">Person Name:</label>
                <input type="text" class="form-control" name="Name" value="@Model.Name" autofocus>
            </div>
            <div class="form-group">
                <label for="email">BirthDate:</label>
                <input type="hidden" name="BirthDate" value="@Model.BirthDate" />
                <input type="text" class="form-control date-picker" name="BirthDateInput" value="@Model.BirthDate.ToString("dd/MM/yyyyy", new System.Globalization.CultureInfo("en-GB"))">
            </div>
            <div class="form-group">
                <label for="email">Salary:</label>
                <input type="text" class="form-control" name="Salary" value="@Model.Salary">
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>