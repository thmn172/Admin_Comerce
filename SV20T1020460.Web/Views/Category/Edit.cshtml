@model SV20T1020460.DomainModels.Category
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="CategoryName" value="@Model.CategoryName" autofocus>
                </div>
                @Html.ValidationMessage(nameof(Model.CategoryName), new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Description" value="@Model.Description">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/images/categorys/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>
            @Html.ValidationMessage("Error", new { @class = "text-danger" })
            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>